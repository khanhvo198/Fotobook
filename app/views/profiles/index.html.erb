                            <div class="circle-lock">
                                <i class="fas fa-lock" class="img-fluid"></i>
                            </div>
                        <% end %>
                        <%= link_to "EDIT", edit_photos_path(:id => photo.id) ,  class: "edit-photo-text" %>
                        
                    </div>
                    <div class="photo-title">
                        <p class="text-center">
                            <%= photo.title%>
                        </p>
                    </div>
                </div>
            <% end %>
        </div>
