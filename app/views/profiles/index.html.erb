    <% if @mode == "photos"%>
            <div class="d-flex justify-content-end">
             <% if @user.id == current_user.id%>
                <%= link_to 'Add photo', new_photos_path, class: "btn btn-success add-photo-button" %>
            <%end%>
            </div>

        <div class="row profile-photos">
            <% @photo_list.each do |photo| %>
