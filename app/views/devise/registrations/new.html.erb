
<main class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-4 col-md-offset-4 d-flex flex-column">
            <div class="login-title">
                <p>Fotobook Login</p>
            </div>
            <div class="login-alternative">
                <ul>
                    <li ><a href="#"><img src="../assets/logo-google.png" class="rounded rounded-circle img-fluid" ></a></li>
                    <li ><a href=#><img src="../assets/logo-facebook.png" class="rounded rounded-circle img-fluid"></a></li>
                    <li ><a href=#><img src="../assets/logo-twitter.png" class="rounded rounded-circle img-fluid"></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-7 col-md-5 col-md-offset-5 d-flex flex-column">
            <div class="wall-account">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form"} ) do |form| %>
                  <div class="form-group">
                    <%= form.label :first_name, "First Name" %>
                    <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
                  </div>
                  <div class="form-group">
                    <%= form.label :last_name, "Last Name" %>
                    <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                  </div>
                  <div class="form-group">
                    <%= form.label :email, "Email" %>
                    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                    <%= form.label :password, "New Password" %>
                    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="form-group">
                    <%= form.label :password_confirmation, "Password Confirmatio" %>
                    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
                  </div>
                  <%= form.submit "Sign up", class: "btn" %>
              <% end %>
            </div>
        </div>
    </div>
</main>

